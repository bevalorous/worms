.stack > .classifier

  .left 
    width: 575px
    height: 432px
    padding: 0px 40px 20px 20px
    display: inline-block
    vertical-align: top_bar
    position: relative

    .videoContainer
      position: absolute
      top: 0px
      left: 0px
      width: 575px
      height: 432px
      border: 2px solid black
      z-index: 0

      .overlay
        background: rgba(#000, 0.5)
        display: none
        height: 100%
        position: absolute
        width: 100%
        z-index: 1

      video, object
        width: 575px
        height: 432px

      .vjs-control
        display: none

      .vjs-controls
        padding: 10px 0 0 0

      .vjs-time-divider, .vjs-duration, .vjs-current-time
        display: block
        float: left
        font-size: 16px
        font-weight: 700
        margin: 0 5px 0 0

    .countdown
      width: 575px
      height: 432px
      z-index:1 
      font-size: 350px
      text-align: center 
      color: white
      position: absolute
      top: 0px
      left: 0px

  .right
    color: #fff
    display: inline-block
    font-size: 13px
    font-weight: 700
    text-shadow: 0 1px 0 #0089c8
    vertical-align: top
    width: 360px

    > section
      border-top: 1px solid #0283AF
      padding: 18px 0

    .prompt
      text-shadow: none
      font-size: 22px
      box-shadow: 1px 1px solid rgba(0,0,0,0.6)

    .subject-info
      padding: 15px 0px 15px 0px
      width: 100%

      img 
        box-shadow: 0 1px 0 0 rgba(#60d4ff, 1)
        display: inline-block
        margin: 0 10px 0 0
        padding: 0
        vertical-align: top

      .details
        display: inline-block
        vertical-align: top
        width: 285px

        h2, p
          padding: 0px
          margin: 0px

    .players
      @extends #clearfix
      padding: 0

      .player
        box-sizing: border-box
        float: left
        height: 204px
        overflow: hidden
        margin: 0
        padding: 10px
        width: 50%

        &:first-child 
          border-right: 1px solid #0283AF
          box-sizing: border-box
          position: relative

          &:before
            background: url(images/bg-site-gradient.png) repeat
            bottom: 0
            content: ""
            height: 30px
            position: absolute
            width: 100%

        .name
          color: #003140
          font-size: 12px
          font-weight: 700
          text-shadow: none

        .sign-in
          cursor: pointer

        p
          margin: 1px 0

    .times
      @extends #semantic-list

      .time
        font-size: 12px
        margin: 0

        span
          color: #000
          text-shadow: 0 1px 0 rgba(#fff, 0.7)

    .actions
      padding: 14px 0 0 0

      button
        @extends #small-button

        &.disabled
          cursor: default
          opacity: 0.5

  .bubble 
    background: #ecf3f8
    border-radius: 0px
    box-shadow:
      0 3px 6px 0 rgba(#000, 0.15),
      inset 0 2px 0 0 #fff
    box-sizing: border-box
    color: #003143
    cursor: pointer
    font-size: 26px
    font-weight: 700
    height: 100px
    padding: 17px 24px
    position: relative
    text-shadow: 0 1px 0 #fff
    width: 360px

    &:after
      border-color: transparent #ecf3f8
      border-style: solid
      border-width: 15px 15px 15px 0
      content: ""
      display: block
      left: -15px
      position: absolute
      top: 35px
      width: 0
      z-index: 1

    p
      margin: 0