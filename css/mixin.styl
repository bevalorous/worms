$site-width = 1000px
$sans-serif = "Open Sans", "Helvetica Neue", "Arial", sans-serif
$serif = "Merriweather", "Georgia", serif

.big-button
  background-color: #e5eff5
  border-radius: 50px
  box-shadow:
    0 3px 5px 0 rgba(#000, 0.15),
    inset 0 2px 0 0 #fff
  box-sizing: border-box
  color: #001d34
  display: block
  font-size: 14px
  font-weight bold
  height: 50px
  line-height: 50px
  text-align: center
  text-decoration: none
  text-shadow: 0 1px 0 #fff
  width: 200px

#site-container
  margin: 0 auto
  width: 1000px