@import './mixin'
@import '../node_modules/nib/lib/nib/'

$tb-background = #f1f1f1
$tb-text-color = #080612
$tb-border-color-1 = #ECECEC
$tb-border-color-2 = #ECECEC
$tb-button-bg = #F1F1EF
$tb-box-shadow = #000
$tb-box-shadow-inset = #CECEC4
$tb-button-text-shadow = #003a54
$tb-bottom-border = #F1F1EF
$tb-input-bg = white 

@import '../node_modules/zooniverse/css/top_bar'
@import '../node_modules/zooniverse/css/login_forms'
@import './bubble'


a.button
  color: #001d34
  font-size: 14px
  font-weight bold
  text-shadow:  1px 0px  #ffffff 

  text-decoration: none
  border-box
  display:block
  width: 200px
  height: 50px
  background-color: #E5EFF5
  border-radius: 50px
  text-align: center
  line-height: 50px
  cursor : pointer
.stack 
  > div 
    display: none
  > div.active 
    display: block

.zooniverseTopBar
  transition: top margin-top 1s ease-in-out
  
  #zooniverse-top-bar-button
    left: 100px


.homeController
  color: #ffffff
  text-shadow: 1px 1px #0089c8
  padding-top:100px
  h1 
    font-size: 30px 
    font-weight: bold 
  h3 
    font-size: 22px
    font-weight: bold
  p
    font-size: 14px

  .left
    display:inline-block
    vertical-align: middle
    width: 400px
    text-align: center
    position: relative
    .details
      display: inline-block;
      vertical-align: middle;
      width: 80px;
      margin-right: 30px;
      text-align: right;
    img 
      display:inline-block
      vertical-align: middle
    p
      font-weight: bold
  .right
    display:inline-block
    vertical-align: middle
    width: 590px
    h1
      margin-bottom: 30px
    p
      font-weight: 400
      margin-bottom: 40px
    a.button
      
      width: 200px
      height: 50px
      border-radius: 50px
      line-height: 50px
.stack
  width: 1000px
  margin-left:auto
  margin-right: auto
  height: 100%
ul
  list-style: none 
  padding: 0px
  margin: 0px

html,body 
  background-color : #08BDF9
  padding: 0px 
  margin: 0px
  font-family : helvetica

.navBar
  color :white 
  margin-top: 28px 
  font-size: 15px
  text-shadow: 1px 0px #333
  ul
    width: 1000px 
    margin-left:auto 
    margin-right:auto
    text-align: right
    li
      display: inline-block
      vertical-align: top
      cursor: pointer
      border-box()
      width: 100px 
      height: 30px
      border-radius: 30px
      text-align: center
      line-height: 30px
      &.active 
        background-color: #0383AF
      a 
        font-size: 15px
        text-shadow: 1px 0px #333
        color: white
        text-decoration: none
    &.selected 
      background-color: #0384B0

.zooniverse-login-form, .dialog-underlay
  display:none

.peerClassifier
  width: 1000px
  height: 47px
  margin-top: 100px

  .left 
    width: 575px
    height: 432px
    padding: 0px 40px 20px 20px
    display: inline-block
    vertical-align: top_bar
    position: relative
    .videoContainer
      position: absolute
      top: 0px
      left: 0px
      width: 575px
      height: 432px
      border: 2px solid black
      z-index: 0
      video 
        width: 575px
        height: 432px
      
    .countdown
      width: 575px
      height: 432px
      z-index:1 
      font-size: 350px
      text-align: center 
      color: white
      position: absolute
      top: 0px
      left: 0px
  .right
    color: white
    text-shadow: 1px 1px #333
    width: 360px
    display: inline-block
    vertical-align: top

    a.button
      width: 100%
      height: 50px
      border-radius: 50px
      line-height: 50px
      margin-top: 20px
      margin-bottom: 20px
    .prompt 
      text-shadow: none
      font-size: 22px
      box-shadow: 1px 1px solid rgba(0,0,0,0.6)

    .wormSeciton  
      width: 100%

      padding: 15px 0px 15px 0px
      border-top: 1px solid #0283AF
      border-bottom: 1px solid #0283AF
      img 
        display: inline-block
        vertical-align: top
        padding:0px
        margin:0px
        margin-right:10wpx
      .details
        display: inline-block
        vertical-align: top
        width: 285px
        h3
          padding: 0px
          margin: 0px
        p
          font-size: 12px
          margin-top: 0px
    .players
      border-top: 1px solid #0283AF 
      border-bottom: 1px solid #0283AF 
      height: 196px 
      padding:  0px
      .player
        display: inline-block
        vertical-align: top
        width: 170px
        padding: 10px 0px  0px 20px
        margin: 0px
        height: 100%
        border-box()
        &:first-child 
          border-right: 1px solid #0283AF 
        .name
          color : #003140
          font-size: 12px
          font-weight: 700
          text-shadow: none
    .times
      overflow-y: hidden
      .time
        font-size: 12px
        span
          color: black
    .score
      font-size: 12px
      color: white
      margin-left: 40px

    .buttons
      margin-top: 23px
      button 
        height: 30px
        border-box()
        border-box 1px white inset, 1px 1px solid rgba(0,0,0,0.6)
        min-width: 100px
        text-align: center
        color: #003140
        border-radius(2px)
        background-color: #EBF2F7
        border: none
        cursor: pointer
        &:last-child 
          margin-left: 40px