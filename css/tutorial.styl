.zootorial-dialog
  background-color: #ecf3f8
  border: 0
  box-shadow: inset 0 2px 0 #fff, 0 1px 15px 0 rgba(#000, 0.5)
  box-sizing: border-box
  display: none
  padding: 11px 10px 48px 15px
  position: relative
  width: 360px

  button[name="close-dialog"]
    appearance: none
    background: url(images/close_x.png) no-repeat top right
    border: 0
    color: rgba(#fff, 0)
    cursor: pointer
    float: right
    margin: 0

  .dialog-content
    color: #003143
    font-size: 13px
    line-height: 1.4em
    text-shadow: 0 1px 0 #fff

    .header
      font-family: "Helvetica Neue", sans-serif
      font-size: 18px
      font-weight: 700
      margin-bottom: 15px

    .details
      padding: 0 22px 0 0

    .buttons
      bottom: 10px
      position: absolute
      right: 10px

      button
        background: #01bbfe
        border: 0
        border-radius: 4px
        box-shadow: 0 1px 0 0 #0082b1
        color: #fff
        cursor: pointer
        font-family: "Lucida Grande", "Verdana", sans-serif
        font-size: 14px
        font-weight: 700
        padding: 7px 12px
        position: relative
        text-shadow: 0 1px 0 #0183b1

        &:active
          background: #0196cb
          box-shadow: 0 -1px 0 0 #0082b1
          margin-top: 1px
          text-shadow: 0 1px 0 #017097

.zootorial-blocker,
.zootorial-focuser
  background: #000
  position: absolute !important

.zootorial-focuser
  opacity: 0.55

.zootorial-blocker
  opacity: 0.2