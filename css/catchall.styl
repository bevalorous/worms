.homeController
  color: #ffffff
  text-shadow: 0 1px 0 #0089c8
  padding-top:100px
  h1 
    font-size: 30px 
    font-weight: bold 
  h3 
    font-size: 22px
    font-weight: bold
  p
    font-size: 14px

  .left
    display:inline-block
    vertical-align: middle
    width: 400px
    text-align: center
    position: relative
    .details
      display: inline-block;
      vertical-align: middle;
      width: 80px;
      margin-right: 30px;
      text-align: right;
    img 
      display:inline-block
      vertical-align: middle
    p
      font-weight: bold

  .right
    display: inline-block
    vertical-align: middle
    width: 540px

    h1
      margin: 0 0 30px 0

    p
      font-size: 16px
      font-weight: 700
      line-height: 1.5em
      margin-bottom: 40px

ul
  list-style: none 
  margin: 0px
  padding: 0px

#app > header
  color: white
  font-size: 12px
  font-weight: 700
  margin-top: 80px
  text-shadow: 0 1px 1px rgba(#000, 0.5)

  .logo
    float: left
    padding: 8px

  ul
    margin: 0 auto
    text-align: right
    width: 1000px

    li
      border-radius: 30px
      box-sizing: border-box
      display: inline-block
      cursor: pointer
      height: 31px
      line-height: 30px
      text-align: center
      vertical-align: top

      &.active 
        background-color: #0383AF
        box-shadow: inset 0 1px 2px 0 rgba(#000, 0.13)

      a
        color: #fff
        display: block
        padding: 0 15px
        text-decoration: none

    &.selected 
      background-color: #0384B0

.peerClassifier
  width: 1000px
  height: 47px
  margin-top: 100px

  .left 
    width: 575px
    height: 432px
    padding: 0px 40px 20px 20px
    display: inline-block
    vertical-align: top_bar
    position: relative

    .videoContainer
      position: absolute
      top: 0px
      left: 0px
      width: 575px
      height: 432px
      border: 2px solid black
      z-index: 0
      video 
        width: 575px
        height: 432px
      
    .countdown
      width: 575px
      height: 432px
      z-index:1 
      font-size: 350px
      text-align: center 
      color: white
      position: absolute
      top: 0px
      left: 0px

  .right
    color: #fff
    display: inline-block
    font-size: 13px
    font-weight: 700
    text-shadow: 0 1px 0 #0089c8
    vertical-align: top
    width: 360px

    > section
      border-top: 1px solid #0283AF
      padding: 18px 0

    .prompt 
      text-shadow: none
      font-size: 22px
      box-shadow: 1px 1px solid rgba(0,0,0,0.6)

    .subject-info
      padding: 15px 0px 15px 0px
      width: 100%

      img 
        display: inline-block
        margin: 0 10px 0 0
        padding: 0
        vertical-align: top

      .details
        display: inline-block
        vertical-align: top
        width: 285px

        h3
          padding: 0px
          margin: 0px
        p
          font-size: 12px

    .players
      padding: 0px

      .player
        display: inline-block
        vertical-align: top
        width: 170px
        padding: 10px 0px  0px 20px
        margin: 0px
        height: 100%
        border-box()
        &:first-child 
          border-right: 1px solid #0283AF 
        .name
          color : #003140
          font-size: 12px
          font-weight: 700
          text-shadow: none

    .times
      overflow-y: hidden

      .time
        font-size: 12px

        span
          color: #000

    .score
      font-size: 12px
      color: white
      margin-left: 40px

    .actions
      padding: 22px 0 0 0

      button
        @extends #small-button
