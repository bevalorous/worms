#app > header
  color: white
  font-size: 12px
  font-weight: 700
  margin-top: 80px
  text-shadow: 0 1px 1px rgba(#000, 0.5)

  .logo
    float: left
    padding: 8px

  ul
    margin: 0 auto
    text-align: right
    width: 1000px

    li
      border-radius: 30px
      box-sizing: border-box
      display: inline-block
      cursor: pointer
      height: 31px
      line-height: 30px
      text-align: center
      vertical-align: top

      &.active 
        background-color: #0383AF
        box-shadow: inset 0 1px 2px 0 rgba(#000, 0.13)

      a
        color: #fff
        display: block
        padding: 0 15px
        text-decoration: none

    &.selected 
      background-color: #0384B0

.peerClassifier

  .left 
    width: 575px
    height: 432px
    padding: 0px 40px 20px 20px
    display: inline-block
    vertical-align: top_bar
    position: relative

    .videoContainer
      position: absolute
      top: 0px
      left: 0px
      width: 575px
      height: 432px
      border: 2px solid black
      z-index: 0

      .overlay
        background: rgba(#000, 0.5)
        display: none
        height: 100%
        position: absolute
        width: 100%
        z-index: 1

      video, object
        width: 575px
        height: 432px
      
    .countdown
      width: 575px
      height: 432px
      z-index:1 
      font-size: 350px
      text-align: center 
      color: white
      position: absolute
      top: 0px
      left: 0px

  .right
    color: #fff
    display: inline-block
    font-size: 13px
    font-weight: 700
    text-shadow: 0 1px 0 #0089c8
    vertical-align: top
    width: 360px

    > section
      border-top: 1px solid #0283AF
      padding: 18px 0

    .prompt
      text-shadow: none
      font-size: 22px
      box-shadow: 1px 1px solid rgba(0,0,0,0.6)

    .subject-info
      padding: 15px 0px 15px 0px
      width: 100%

      img 
        box-shadow: 0 1px 0 0 rgba(#60d4ff, 1)
        display: inline-block
        margin: 0 10px 0 0
        padding: 0
        vertical-align: top

      .details
        display: inline-block
        vertical-align: top
        width: 285px

        h2, p
          padding: 0px
          margin: 0px

    .players
      @extends #clearfix
      padding: 0

      .player
        box-sizing: border-box
        float: left
        height: 210px
        overflow: hidden
        margin: 0
        padding: 10px
        width: 50%

        &:first-child 
          border-right: 1px solid #0283AF
          box-sizing: border-box
          position: relative

          &:before
            background: url(images/bg-site-gradient.png) repeat
            bottom: 0
            content: ""
            height: 30px
            position: absolute
            width: 100%

        .name
          color: #003140
          font-size: 12px
          font-weight: 700
          text-shadow: none

        .sign-in
          cursor: pointer

        p
          margin: 1px 0

    .times
      @extends #semantic-list

      .time
        font-size: 12px
        margin: 0

        span
          color: #000
          text-shadow: 0 1px 0 rgba(#fff, 0.7)

    .actions
      padding: 22px 0 0 0

      button
        @extends #small-button

        &.disabled
          cursor: default
          opacity: 0.5
