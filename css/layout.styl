::selection
  background: #0089c8
  color: #fff
  text-shadow: 0 1px 0 darken(#0089c8, 30%)

html
  height: 100%

body
  min-height: 100%
  
html, body
  margin: 0px
  padding: 0px

body
  background: #01bbff url(images/bg-site.png) repeat
  border-top: 5px solid #000
  color: #fff
  font-family: $body-sans-serif
  position: relative

  > .background
    background: url(images/background.png) center
    height: 720px
    left: calc(50% \- ($site-width / 2))
    left: -webkit-calc(50% \- ($site-width / 2))
    margin: 0 auto
    position: absolute
    top: 0
    width: $site-width
    z-index: -1

  > footer
    background: #16c0ff url(images/bg-footer.png) repeat
    border-top: 1px solid #00b5f8
    border-bottom: 22px solid #000
    box-sizing: border-box
    color: #0175a0
    height: 309px
    padding: 47px 0 40px 0
    position: absolute
    width: 100%
    bottom: (-@height)

    > .zooniverse-footer
      @extends #site-container
      background: url(images/zoo-logo.png) no-repeat 0 7px
      box-sizing: border-box

      .title
        font-family: $footer-sans-serif
        font-size: 19px
        font-weight: 300
        line-height: 1.5em

      .category
        font-size: 12px
        line-height: 20px

        .category-title
          font-size: 11px
          font-weight: 700

.stack
  position: relative
  
  > div
    display: none
  > div.active
    @extends #clearfix
    display: block
    padding: 70px 0 0 0

#app
  position: relative
  z-index: 1
  > header, > .stack
    @extends #site-container

#app > header
  color: white
  font-size: 12px
  font-weight: 700
  margin-top: 80px
  text-shadow: 0 1px 1px rgba(#000, 0.5)

  .logo
    float: left
    padding: 8px

  ul
    margin: 0 auto
    text-align: right
    width: 1000px

    li
      border-radius: 30px
      box-sizing: border-box
      display: inline-block
      cursor: pointer
      height: 31px
      line-height: 30px
      text-align: center
      vertical-align: top

      &.active 
        background-color: #0383AF
        box-shadow: inset 0 1px 2px 0 rgba(#000, 0.13)

      a
        color: #fff
        display: block
        padding: 0 15px
        text-decoration: none

    &.selected 
      background-color: #0384B0

