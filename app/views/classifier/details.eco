<% t = require 't7e' %>

<img src="images/worm.png"></img>
<div class="details">
  <% if @mutation?: %>
    <%- t 'h2', "mutations.#{ @mutation }.name" %>
    <%- t 'p', "mutations.#{ @mutation }.description" %>
  <% else: %>
    <%- t 'h2', "mutations.notAvailable.name" %>
    <%- t 'p', "mutations.notAvailable.description" %>
  <% end %>
</div>